<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="APP_NAME" value="ap-fds-receiving" />
    <property name="LOG_HOME" value="logs/${APP_NAME}" />
    <!-- Console appender for APP log -->
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern> %d{yyyy-MM-dd HH:mm:ss.SSS}| %X{X-Correlation-ID} | [%thread] %-5level %logger{36} - %msg%n </pattern>
        </encoder>
    </appender>
    <!--# Rolling appender for APP logs-->
    <appender name="APP-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize> <!-- Max size of one log file -->
            <maxHistory>90</maxHistory> <!-- Max no. of days for which we want to keep history-->
            <totalSizeCap>2GB</totalSizeCap> <!-- Max size of this type of logs -->
        </rollingPolicy>
        <encoder>
            <pattern> %d{yyyy-MM-dd HH:mm:ss.SSS}| %X{X-Correlation-ID} | [%thread] %-5level %logger{36} - %msg%n </pattern>
        </encoder>
    </appender>
    <appender name="aiAppender" class="com.microsoft.applicationinsights.logback.ApplicationInsightsAppender">
        <instrumentationKey>${APPLICATION_INSIGHTS_KEY}</instrumentationKey>
    </appender>
    <root level="${root.level:-INFO}">
        <appender-ref ref="stdout" />
        <appender-ref ref="APP-FILE" />
        <appender-ref ref="aiAppender" />
    </root>
</configuration>

